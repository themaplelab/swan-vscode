{
	"name": "swan",
	"displayName": "SWAN",
	"description": "VSCode integration for SWAN - Swift static analysis",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:commands.startSWAN"
	],
	"main": "./out/commands.js",
	"contributes": {
		"commands": [
			{
				"command": "commands.startSWAN",
				"title": "Start SWAN"
			},
			{
				"command": "commands.stopSWAN",
				"title": "Stop SWAN"
			},
			{
				"command": "commands.runTaintAnalysis",
				"title": "Run Taint Analysis"
			},
			{
				"command": "commands.generateDataFlow",
				"title": "Generate Data Flow"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "taintAnalysisContainer",
					"title": "Taint Analysis",
					"icon": "./resources/icons/viewIcon.png"
				}
			]
		},
		"views": {
			"taintAnalysisContainer": [
				{
					"id": "taintAnalysisSideBar",
					"name": "Paths"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "commands.startSWAN",
					"when": "view == taintAnalysisSideBar && SWANStarted == false"
				},
				{
					"command": "commands.stopSWAN",
					"when": "view == taintAnalysisSideBar && SWANStarted == true"
				},
				{
					"command": "commands.generateDataFlow",
					"when": "view == taintAnalysisSideBar && SWANStarted"
				},
				{
					"command": "commands.runTaintAnalysis",
					"when": "view == taintAnalysisSideBar && SWANStarted && dataFlowGenerated"
				}
			],
			"commandPalette": [
				{
					"command": "commands.startSWAN",
					"title": "Start SWAN",
					"when": "false"
				},
				{
					"command": "commands.stopSWAN",
					"when": "false",
					"title": "Stop SWAN"
				},
				{
					"command": "commands.generateDataFlow",
					"when": "false",
					"title": "Generate Data Flow"
				},
				{
					"command": "commands.runTaintAnalysis",
					"when": "false",
					"title": "Run Taint Analysis"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"socket.io": "^2.3.0",
		"socket.io-client": "^2.3.0"
	}
}
